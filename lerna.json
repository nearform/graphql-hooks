{
  "packages": ["packages/*", "examples/*"],
  "version": "independent",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): :rocket:"
    },
    "version": {
      "conventionalCommits": true,
      "createRelease": "github"
    },
    "bootstrap": {
      "hoist": ["react", "react-dom", "@rollup/plugin-node-resolve", "rollup-plugin-babel", "rollup-plugin-commonjs", "rollup-plugin-replace", "rollup-plugin-size-snapshot", "rollup-plugin-terser", "@babel/preset-env", "@babel/preset-react", "husky"],
      "npmClientArgs": ["--no-package-lock"]
    }
  }
}
