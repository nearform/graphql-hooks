{
  "name": "root",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:acceptance": "cypress open",
    "build": "lerna run build",
    "build:packages": "lerna run build --no-private",
    "build:site": "lerna run build --scope=create-react-app",
    "postinstall": "lerna bootstrap --hoist --no-ci && npm run build:packages",
    "tsd": "lerna run tsd",
    "lint": "eslint .",
    "check-types": "lerna run check-types",
    "prettier": "prettier '**/*.js' '**/*.md' '**/*.ts' --write",
    "release": "lerna publish",
    "clean": "lerna run clean && lerna clean && rm -rf ./node_modules",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/core": "^7.16.12",
    "@babel/eslint-parser": "^7.16.5",
    "@babel/preset-env": "^7.14.1",
    "@babel/preset-react": "^7.13.13",
    "@commitlint/cli": "^16.0.1",
    "@commitlint/config-conventional": "^17.0.3",
    "@testing-library/cypress": "^8.0.2",
    "@types/jest": "^27.4.1",
    "babel-jest": "^28.1.0",
    "cypress": "^9.6.0",
    "esbuild": "^0.14.27",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-config-react-app": "^7.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.0.0",
    "husky": "^7.0.0",
    "jest": "^28.1.0",
    "jest-environment-jsdom": "^28.1.0",
    "jest-environment-node": "^28.1.0",
    "lerna": "^3.22.1",
    "lint-staged": "^12.1.2",
    "prettier": "^2.3.0",
    "rollup": "^2.47.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-esbuild": "^4.8.2",
    "rollup-plugin-node-resolve": "^5.0.2",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-size-snapshot": "^0.12.0",
    "rollup-plugin-terser": "^7.0.0",
    "ts-jest": "^28.0.1",
    "typescript": "^4.7.4"
  },
  "lint-staged": {
    "**/*.js": [
      "eslint",
      "prettier --write"
    ]
  },
  "engines": {
    "node": "^16"
  }
}
