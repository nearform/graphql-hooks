{
  "name": "root",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:acceptance": "cypress open",
    "build": "lerna run build",
    "build:packages": "lerna run build --no-private",
    "build:site": "lerna run build --scope=create-react-app",
    "postinstall": "npm run build:packages",
    "lint": "eslint .",
    "check-types": "lerna run check-types",
    "prettier": "prettier '**/*.js' '**/*.md' '**/*.ts' --write",
    "release": "lerna publish",
    "clean": "lerna run clean && lerna clean && rm -rf ./node_modules",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/core": "^7.16.12",
    "@babel/eslint-parser": "^7.16.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
    "@babel/plugin-transform-object-rest-spread": "^7.22.5",
    "@babel/preset-env": "^7.14.1",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.18.6",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@testing-library/cypress": "^9.0.0",
    "@types/jest": "^29.0.3",
    "babel-jest": "^29.0.1",
    "cross-env": "^7.0.3",
    "cypress": "^12.1.0",
    "esbuild": "^0.18.14",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-config-react-app": "^7.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.0.0",
    "husky": "^8.0.1",
    "jest": "^29.0.1",
    "jest-environment-jsdom": "^29.0.1",
    "jest-environment-node": "^29.0.1",
    "lerna": "^7.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "rollup": "^2.47.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-esbuild": "^5.0.0",
    "rollup-plugin-node-resolve": "^5.0.2",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-size-snapshot": "^0.12.0",
    "rollup-plugin-terser": "^7.0.0",
    "ts-jest": "^29.0.1",
    "typescript": "^5.1.3"
  },
  "lint-staged": {
    "**/*.js": [
      "eslint",
      "prettier --write"
    ]
  },
  "engines": {
    "node": "^16"
  },
  "workspaces": [
    "packages/*",
    "examples/*",
    "examples/persisted-queries/*"
  ]
}
