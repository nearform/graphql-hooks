{
  "name": "root",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:acceptance": "testcafe chrome test/acceptance/",
    "postinstall": "lerna bootstrap --no-ci && lerna run build",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "lint": "eslint .",
    "prettier": "prettier '**/*.js' '**/*.md' '**/*.ts' --write",
    "release": "lerna publish",
    "clean": "lerna run clean && lerna clean && rm -rf ./node_modules"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.14.1",
    "@babel/preset-react": "^7.13.13",
    "@commitlint/cli": "^12.0.0",
    "@commitlint/config-conventional": "^12.0.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^27.0.0",
    "coveralls": "^3.0.4",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.0.0",
    "husky": "^4.3.8",
    "jest": "^27.0.0",
    "json-graphql-server": "^2.2.3",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0",
    "rollup": "^2.47.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-node-resolve": "^5.0.2",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-size-snapshot": "^0.12.0",
    "rollup-plugin-terser": "^7.0.0",
    "testcafe": "^1.14.0",
    "testcafe-reporter-xunit": "^2.1.0"
  },
  "lint-staged": {
    "**/*.js": [
      "eslint",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  }
}
